</head>

<body>

  <article class="container">

    <!-- Navbar -->
    <nav>
      <ul>
        <li><a href="/index">Home</a></li>
        
        <li><a href="#">Manage</a>
            <ul class="dropdown">
              <li><a href="/Index/manage_user">users</a></li>
              <li><a href="/Index/manage_product">Products</a></li>
            </ul>
          
        </li>
        <li>
            <a href="#">Reports</a>
              <ul class="dropdown">
                <li><a href="/Index/user_report">Users</a></li>
                <li><a href="/Index/product_report">Products</a></li>
                <li><a href="/Index/order_report">Orders</a></li>
              </ul>
          </li>
        <li><a href="#"><i class="fa fa-user"></i></a>
        <ul class="dropdown">
                <li><a href="/Index/signIn">Logout</a></li>
              </ul></li>
      </ul>
    </nav>

    <!-- Responsive Navbar-->
    <section class="menu-btn">
      +
    </section>

    <!-- Main Heading-->
    
    <section class="section-follow">
        <h3 class="follow-me">Manage Products</h3>
      </section>


    <section>
        <section class="description">
            <div class="Container">
                

                <form action="#" method="POST">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Units in Stock</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>Product Category</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          {{#each list}}
                          
                            <tr>
                                <td>{{ProductName}}</td>
                                <td>{{ProductDescription}}</td>
                                <td>{{ProductStock}}</td>
                                <td>{{ProductPrice}}</td>
                                <td>
                                  
                                    <img src="/{{ProductImage}}" height="100px" width="100px" />
                                    
                                </td>
                                <td>{{ProductCategory}}</td>
                                <td>
                                    <a href="/Index/edit_product/{{this._id}}" class="btn border-shadow update">
                                        <b>   ðŸ–‰
                                        </b>
                                    </a>
                                    <a href="/Index/delete/{{this._id}}" onclick="return confirm('Are you sure to delete?');" class="btn border-shadow update">
                                        <b>   âŒ§
                                        </b>
                                    </a>
                                </td>
                            </tr>
                            
                            {{/each}}
                        </tbody>
                    </table>
                </form>
                <center><a href="/Index/add_product" style="text-decoration: none; background-color: #dcedc8; color:white;"><button class="btn success">Add Product</button></a></center>
        </div>
        </section>
    </section>




  </article>

  <script>
    const menuBtn = document.querySelector(".menu-btn");
const nav = document.querySelector("nav");

menuBtn.addEventListener("click", function () {
  menuBtn.classList.toggle("active");
  nav.classList.toggle("active");
})

window.addEventListener("scroll", function () {
  if (window.pageYOffset > 4) {
    nav.classList.add("scrolled");
  } else {
    nav.classList.remove("scrolled");
  }
})
  </script>

</body>

</html>